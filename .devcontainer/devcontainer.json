{
    "build": {
        "dockerfile": "Dockerfile"
        // Add your build configuration here if needed
    },
    "customizations": {
        "vscode": {
            "settings": {
                "rust-analyzer.cargo.useRustcWrapperForBuild": true,
                "rust-analyzer.checkOnSave": true,
                "rust-analyzer.checkOnSave.command": "clippy"
            },
            "extensions": [
                "rust-lang.rust-analyzer"
            ]
        }
    },
    "postCreateCommand": "rustup update && rustup component add clippy rustfmt"
}
